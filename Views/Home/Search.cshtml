@model Project.Models.AllProduct
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@Scripts.Render("~/bundles/jquery")


<script>
       $(function () {
           $.getJSON('@Url.Action("GetSite", "Home")', function (result) {
               var ddl = $('#Id');
               ddl.empty();
               $(result).each(function () {
                   ddl.append(
                       $('<option/>', {
                           value: this.Id
                       }).html(this.Name)
                   );
               });
           });
       });
</script>


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Search the Product</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                    {
                        <div>


                            <div>
                                <div class="col-md-4 col-md-offset-4" style="margin-bottom:80px">
                                    @Html.DropDownListFor(x => x.Id, new SelectList(Enumerable.Empty<SelectListItem>()))
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="btn btn-lg btn-success btn-block" style="margin-top:10px">Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <label style=" padding-bottom:180px"></label>
    </div>

</div>


